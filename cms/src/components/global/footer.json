{
  "collectionName": "components_global_footers",
  "info": {
    "displayName": "Footer"
  },
  "options": {},
  "attributes": {
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "footer_columns": {
      "type": "component",
      "component": "global.footer-column",
      "repeatable": true
    },
    "cta": {
      "type": "component",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "has_cta"
            },
            true
          ]
        }
      },
      "component": "block.cta",
      "repeatable": false
    },
    "has_cta": {
      "type": "boolean",
      "default": false
    }
  },
  "config": {}
}
