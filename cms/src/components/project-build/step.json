    "title": {
      "type": "string",
      "minLength": 2,
      "required": true
    },
    "subtitle": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "order": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "type": {
      "type": "enumeration",
      "required": true,
      "default": "form",
      "enum": [
        "form",
        "relations"
      ]
    },
    "clickable_relations": {
      "type": "boolean",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "type"
            },
            "relations"
          ]
        }
      },
      "default": true
    },
    "services": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::service.service",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "type"
            },
            "relations"
          ]
        }
      }
    },
    "subservices": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::subservice.subservice",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "type"
            },
            "relations"
          ]
        }
      }
    },
    "questions": {
      "type": "component",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "type"
            },
            "form"
          ]
        }
      },
      "component": "project-build.question",
      "repeatable": true
    }
  },
  "config": {}
}
