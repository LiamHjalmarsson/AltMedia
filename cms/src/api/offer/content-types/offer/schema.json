{
  "kind": "collectionType",
  "collectionName": "offers",
  "info": {
    "singularName": "offer",
    "pluralName": "offers",
    "displayName": "Offer"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "icon": {
      "type": "component",
      "component": "ui.icon",
      "repeatable": false,
      "required": true
    },
    "features": {
      "type": "json",
      "required": true
    },
    "is_popular": {
      "type": "boolean",
      "default": false
    },
    "start_price": {
      "type": "integer",
      "required": true
    },
    "month_price": {
      "type": "integer"
    },
    "subservices": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::subservice.subservice"
    }
  }
}
